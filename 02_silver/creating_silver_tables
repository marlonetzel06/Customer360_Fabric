-- Code for the silver layer creation

CREATE TABLE silver.silver_kontakte 
(
    Kontakt_sk                      BIGINT IDENTITY,
    Kontakt_ID                      INT,
    Kunden_ID                       INT,
    Name                            VARCHAR(200),
    Email                           VARCHAR(200),
    Position                        VARCHAR(100)
);

GO 

CREATE TABLE silver.silver_Kunden
(
    Kunde_sk                        BIGINT IDENTITY,
    Kunden_ID                       INT,
    Kundenname                      VARCHAR (100),
    Land                            VARCHAR (50),
    Umsatzklasse                    VARCHAR (2),
    Branche                         VARCHAR (100)
);


GO

CREATE TABLE silver.silver_Mitarbeiter
(
    Mitarbeiter_sk                  BIGINT IDENTITY,
    Mitarbeiter_ID                  INT,
    Name                            VARCHAR(100),
    Abteilung                       VARCHAR(100),
    Rolle                           VARCHAR(100),
    Einstellungsdatum               DATE,
    Gehalt                          DECIMAL(12,2)
);

GO

CREATE TABLE silver.silver_Projekte
(
    Projekt_sk                      BIGINT IDENTITY,
    Projekt_ID                      INT,
    KUNDEN_ID                       INT,
    Service_ID                      INT, 
    Projektname                     VARCHAR(100),
    Startdatum                      DATE,
    Enddatum                        DATE,
    Budget_EUR                      DECIMAL(12,2),
    Projektstatus                   VARCHAR (100)
);

GO

CREATE TABLE silver.silver_Service
(
    Service_sk                      BIGINT IDENTITY,
    Service_ID                      INT,
    Service_Name                    VARCHAR(100),
    Kategorie                       VARCHAR(100),
    Preis_pro_Stunde                DECIMAL (12,2)
);

GO

CREATE TABLE silver.silver_transactions_all
(
    Transaktion_ID                  VARCHAR(50),
    Kunden_ID                       INT,
    Service                         VARCHAR (100),
    Betrag_EUR                      DECIMAL(12,2),
    Transaktionsdatum               DATE,
    Status                          VARCHAR(100),
    Quellsystem                     VARCHAR(100)
);

GO
